            "oneOf": [
              {
                "$ref": "#/components/schemas/NeuronSetReference",
                "title": "Neuron Set",
                "description": "Neuron set to simulate."
              },
              { "type": "null" }
            ]
          }
        },
        "additionalProperties": false,
        "type": "object",
        "required": ["type", "circuit"],
